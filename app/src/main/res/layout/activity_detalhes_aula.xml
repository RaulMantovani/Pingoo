<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMateriaDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matéria"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfessorDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Professor" />

        <TextView
            android:id="@+id/tvDiaSemanaDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dia da Semana" />

        <TextView
            android:id="@+id/tvNotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Notas:"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp" />

        <TextView
            android:id="@+id/tvListaNotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sem notas" />

        <TextView
            android:id="@+id/tvAnotacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Anotações:"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaAnotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp" />

        <TextView
            android:id="@+id/tvListaAnotacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sem anotações" />

        <Button
            android:id="@+id/btnAdicionarNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Adicionar Nota" />

        <Button
            android:id="@+id/btnAdicionarAnotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Adicionar Anotação" />

        <Button
            android:id="@+id/btnExcluirAula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir Aula" />

    </LinearLayout>
</ScrollView>
